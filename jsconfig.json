{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ES2023"
    ],
    "types": ["vitest/globals"],
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "typeAcquisition": {
    "include": [
      "vitest"
    ]
  },
  "types": [
    "node",
  ],
  "exclude": ["node_modules"],
}